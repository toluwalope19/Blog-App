<?xml version="1.0" encoding="utf-8"?>


                                                        

                                             
             
                    
                                                 
       
<LinearLayout
    android:id="@+id/linear1"
    android:orientation="vertical"
    android:weightSum="8"
    android:elevation="4dp"
    android:background="@drawable/post_background"
    android:layout_marginStart="8dp"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginEnd="4dp"
    android:layout_width="match_parent"
    android:layout_height="132dp" android:tag="layout/home_post_row_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">



    <ImageView
        android:id="@+id/showPostHomeImage"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:tag="binding_1"     
        android:layout_weight="2"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:weightSum="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showPostHomeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:tooltipText="@string/category"
            android:tag="binding_2"         
            android:textAllCaps="true"
          />
        <TextView
            android:id="@+id/showPostHomeTitle"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:tag="binding_3"      />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:tag="binding_4"     />

    </LinearLayout>
    </LinearLayout>
    <View style="@style/Divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_weight="2">

            <ImageView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_marginBottom="4dp"
                android:tint="@color/second_text"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp" />
            <ImageView
                android:id="@+id/like"
                android:layout_marginBottom="4dp"
                android:layout_gravity="bottom"
                android:tint="@color/second_text"
                android:layout_width="24dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:src="@drawable/clap" />

        <ImageView
            android:id="@+id/menu"
            android:background="@color/white"
            android:layout_marginBottom="4dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:tint="@color/second_text"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert_black_24dp" />

    </LinearLayout>


</LinearLayout>


         